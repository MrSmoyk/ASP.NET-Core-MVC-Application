@model Domain.ViewModels.StudentVM
@{
    ViewData["Title"] = "Delete";
}
<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black pl-3">Delete Student</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="LastName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Group"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="FirstName" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="LastName" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Group.GroupName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="GetAllStudents" asp-route-Id="Group.GroupId" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
 }