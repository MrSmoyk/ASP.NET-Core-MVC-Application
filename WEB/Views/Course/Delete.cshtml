@model Domain.ViewModels.CourseVM

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black pl-3">Delete Course</h2>
        </div>
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Course Name
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td width="100%">
                        <input asp-for="CourseName" disabled class="form-control" />
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-danger w-75" value="Delete" />
                </div>
                <div class="col">
                    <a asp-action="GetAllCourses" class="btn btn-success w-75">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
