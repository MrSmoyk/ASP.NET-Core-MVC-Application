@model List<Domain.ViewModels.CourseVM>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Courses List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Course" asp-action="Create" class="btn btn-primary">Create new Course</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                     <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="20%">
                        <a asp-controller="Group" asp-action="GetAllGroups" asp-route-Id="@obj.Id" class="btn btn-primary mx-1">@obj.CourseName</a>
                        </td>
                     <td width="60%">@obj.Description</td>
                    <td width="20%">
                        <div class="w-100 btn-group"role="group">
                            <a asp-controller="Course" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Course" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table> 
    }
    else
    {
        <p>No courses yet!</p>
    }

</div>



